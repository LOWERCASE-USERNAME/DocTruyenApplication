<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title of the Chapter -->
        <TextView
            android:id="@+id/chapter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:textColor="#000000"
            android:text="Chapter Title" />

        <!-- Content of the Chapter -->
        <TextView
            android:id="@+id/chapter_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:lineSpacingExtra="8dp"
            android:textColor="#333333"
            android:text="Chapter content goes here..."
            android:paddingBottom="16dp" />

        <!-- Comment button -->
        <Button
            android:id="@+id/comment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bình luận"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- New button for story info -->
<!--        <Button-->
<!--            android:id="@+id/story_info_button"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Thông tin về truyện"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginBottom="16dp" />-->

        <!-- Previous and Next Chapter buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="16dp">

            <Button
                android:id="@+id/previous_chapter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous Chapter" />

            <Button
                android:id="@+id/next_chapter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Chapter"
                android:layout_marginStart="16dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
